extends default

block content

  //This page will include the form to add a reptile to the current user.
  div.newAccountArea.contentGrid.p-3
    h3.fancyText.h3Size.textEffectC.borderA.gradientC Add Reptile:
    div.borderD.solidColorC.p-3
      p.standardText Add a new reptile to monitor.
      hr
      form(method="POST" action="/monitoring/create_reptile")
        div.grid-1col.mb-3
          div.input-group
            div.input-group-prepend
              span.input-group-text Name:
            input.form-control(type="text" name="reptiname" autofocus)
          div.input-group
            div.input-group-prepend
              span.input-group-text Reptile Type:
            select.form-control.custom-select(name="reptitype")
              include reptiOptions.pug
        input.buttonTypeA.fancyText.hoverItem.clickItem.p-2.mb-2(type="submit" value="Add Reptile")
