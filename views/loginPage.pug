extends default

block content

	div.contentGrid.p-3
		h3.fancyText.h3Size.textEffectC.borderA.gradientC Login:
		div.borderD.solidColorC.p-3
			p.p-2 Enter your username and password to login.
			hr
			form(method="POST" action="/profile/login")
				div.grid-1col.mb-3
					div.input-group
						div.input-group-prepend
							span.input-group-text Username:
						input.form-control(type="text", name="username", autofocus)
					div.input-group
						div.input-group-prepend
							span.input-group-text Password:
						input.form-control(type="text", name="password")
				input.btn.btn-primary(type="submit" value="Log In")